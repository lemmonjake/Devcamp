<div class="col-sm-8 blog-main">

  <h2> <%= @blog.title %> </h2>

  <nav class="breadcrumb">
    <%= link_to "Home", root_path, class: 'breadcrumb-item' %>
    <%= link_to @blog.topic.title, topic_path(@blog.topic), class: 'breadcrumb-item' %>
    <span class="breadcrumb-item active"><%= @blog.title %></span>
    
    <span class="pull-right">
      <%= link_to fa_icon('file-text'), toggle_status_blog_path(@blog), style: blog_status_color(@blog), :title=> blog_published_status(@blog) if logged_in?(:site_admin) %> 
      <%= link_to fa_icon('pencil-square-o'), edit_blog_path(@blog), :title=> "Edit blog" if logged_in?(:site_admin) %>
      <%= link_to fa_icon('trash'), @blog, method: :delete, data: { confirm: 'Are you sure you want to delete this post' }, :title=> "Delete blog" if logged_in?(:site_admin) %>
    </span>
  </nav>

  <p>
    <%=  %>
  </p>

  <p>
    <%= markdown @blog.body %>
  </p>
  
  <%= render 'comments/comment_form' %>
  
  <div id="comments" data-blog-id="<%= @blog.id%>">
    <%= render @blog.comments %>
  </div>
</div>